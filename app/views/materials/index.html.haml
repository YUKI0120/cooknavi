#foodstuff.big-bg
  .home-content
    %h2.page-title Foodstuff
.searchbar
  = form_with url: search_materials_path, local: true, method: :get, class: "form" do |f|
    = f.text_field :keyword, placeholder: "材料の検索", class: "searchbar-input"
    = button_tag type: 'submit', class: 'search-btn' do
      .searchbar__icon
        = image_tag ("icon-search 1.png"), class: "searchicon"
.material-contents
  - @materials.each do |material|
    .material-contents__index
      = link_to material.name, material_path(material.id), class: "contents_name"
- if user_signed_in?
  = link_to new_material_path, id: "#button", class: "new_recipe_btn" do
    .exhibitionBtn__box
      .exhibitionbox__text
        材料の投稿
      %i.fas.fa-carrot.fa-3x