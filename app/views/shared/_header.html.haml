.header
  .headerIn
    .headermain
      %h1.headermain__icon
        = link_to "CookNavi", root_path
      .searchbar
        = form_with url: search_recipes_path, local: true, method: :get, class: "form" do |f|
          = f.text_field :keyword, placeholder: "キーワードから探す", class: "searchbar-input"
          = button_tag type: 'submit', class: 'search-btn' do
            .searchbar__icon
              = image_tag ("icon-search 1.png"), class: "searchicon"
    .tag
      %ul.lefttag
        %li.lefttag__item.leftta__item--first
          = link_to "新規投稿", "/recipes/new", class: "post"
      - if user_signed_in?
        %ul.righttag
          %li.righttag__item.righttag__item--login
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "post"
          %li.righttag__item.righttag__item--new
            = link_to  "マイページ", "/users/#{current_user.id}", class: "post"
      - else
        %ul.righttag
          %li.righttag__item
            = link_to "ログイン", new_user_session_path, class: 'post'
          %li.righttag__item
            = link_to "新規会員登録", new_user_registration_path, class: 'post'